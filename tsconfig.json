{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS", // use import insted of require
    "outDir": "./dist",
    "esModuleInterop": true,// compiles ts to js containing import | not require statements
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true //skip type checking of declaration files
  },
  "include": ["src/**/*", "client"],
  "exclude": ["client"]
}